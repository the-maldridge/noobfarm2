{% extends "base.p2" %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="card">
  <div class="center">
    <form method="POST">
      <fieldset>
        <legend>Log In Securely</legend>
        <input type="text" name="username" placeholder="Username" /><br />
        <input type="password" name="password" placeholder="Password" /><br />
        <button action="submit">Log In</button>
      </fieldset>
    </form>
  </div>
</div>
{% endblock %}
